{
	"security.workspace.trust.enabled": false,
	"workbench.colorTheme": "Default Light+",
	"editor.minimap.enabled": false,
	"files.autoSave": "afterDelay",
	"files.autoSaveDelay": 1000,
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/.DS_Store": true,
		"**/Thumbs.db": true,
		"**/CVS": true,
		".hypothesis": true,
		".mypy_cache": true,
		".pytest_cache": true
	},
	"python.analysis.exclude": [
		"**/node_modules",
		"**/__pycache__",
		"**/.*",
		"build/**",
		"dist/**",
	],
	"python.analysis.ignore": [
		".hypothesis",
		".mypy_cache",
		".pytest_cache",
		".vscode",
		".idea",
		".tox",
		".nox",
	],
	"python.analysis.indexing": true,
	"python.analysis.inlayHints.variableTypes": true,
	"python.analysis.useLibraryCodeForTypes": true,
	"python.analysis.autoFormatStrings": true,
	"python.analysis.enablePytestSupport": true,
	"python.analysis.gotoDefinitionInStringLiteral": true,
	"python.analysis.inlayHints.callArgumentNames": "all",
	"python.analysis.typeCheckingMode": "basic",
	"search.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/Thumbs.db": true
	},
	"[python]": {
		"editor.insertSpaces": true,
		"editor.tabSize": 4,
		"editor.detectIndentation": true,
		"editor.wordBasedSuggestions": "off",
		"editor.formatOnType": true,
		"editor.defaultFormatter": "charliermarsh.ruff"
	},
	"[restructuredtext]": {
		"editor.wordWrap": "on",
	},
	"editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?_-",
	"ruff.exclude": [
		".mypy_cache",
		".pytest_cache",
		"build",
		"scratch"
	],
	"demonstrable.defaultResolution": "1024x768",
	"demonstrable.defaultTheme": "tubetrain-light",
	"tailwindCSS.classAttributes": [
		"class",
		"className",
		"ngClass",
		"class:list",
		"klass"
	],
	"tailwindCSS.includeLanguages": {
		"jinja-html": "html",
		"python": "javascript"
	},
	"tailwindCSS.emmetCompletions": true,
	"emmet.includeLanguages": {
		"jinja-html": "html"
	},
	"redhat.telemetry.enabled": true,
	"github.copilot.enable": {
		"*": false,
		"plaintext": false,
		"markdown": false,
		"scminput": false
	},
	"python.envFile": "",
	"mypy-type-checker.args": [
		"--enable-incomplete-feature=NewGenericSyntax"
	],
	"explorer.autoReveal": false,
	"git.openRepositoryInParentFolders": "never",
	"editor.inlayHints.enabled": "offUnlessPressed",

	// This make line-navigation in vim mode work based on "display lines" (i.e. when wrapping is on).
	// https://superuser.com/questions/1290030/vs-code-how-can-i-move-the-cursor-by-display-line-when-wrapping-in-vs-code 
	"vim.normalModeKeyBindingsNonRecursive": [
		{
			"before": [
				"j"
			],
			"after": [
				"g",
				"j"
			]
		},
		{
			"before": [
				"k"
			],
			"after": [
				"g",
				"k"
			]
		}
	],
	"pygls.server.cwd": "${workspaceFolder}/examples/servers",
	"editor.multiCursorModifier": "ctrlCmd",
	"makefile.configureOnOpen": false,
	"project-scopes.globalExclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/.DS_Store": true,
		"**/Thumbs.db": true,
		"**/CVS": true,
		".hypothesis": true,
		".mypy_cache": true,
		".pytest_cache": true
	},
	"project-scopes.activeScope": "vscode",
	"project-scopes.enabled": false,
	"[typescript]": {
		"editor.defaultFormatter": "vscode.typescript-language-features"
	},
	"terminal.integrated.fontSize": 14,
	"[json]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[yaml]": {
		"editor.defaultFormatter": "redhat.vscode-yaml"
	},
	"zig.zls.enabled": "on",
}